                          SelectionChanged="dataBaseGrid_SelectionChanged" RowHeight="40" MinRowHeight="40">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Производитель" Binding="{Binding Manufacturer}" Width="20*" MinWidth="100" IsReadOnly="True"></DataGridTextColumn>
                        <DataGridTextColumn Header="Наименование"  Binding="{Binding ProductName}" Width="50*" MinWidth="100" IsReadOnly="True"></DataGridTextColumn>
                        <DataGridTextColumn Header="Артикул"  Binding="{Binding Article}" Width="20*" MinWidth="100" IsReadOnly="True"></DataGridTextColumn>
                        <DataGridTextColumn Header="Ед. измерения"  Binding="{Binding Unit}" Width="7*" MinWidth="75" IsReadOnly="True"></DataGridTextColumn>
                        <DataGridTemplateColumn Header="Изображение" Width="10*" MinWidth="50" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding Photo, Converter={StaticResource ByteArrayToImageSourceConverter}}" Width="Auto" Height="Auto" MaxWidth="100" MaxHeight="100" MinHeight="30" MinWidth="30"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Цена"  Binding="{Binding Cost}" Width="5*" MinWidth="75" IsReadOnly="True"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>
    
    
