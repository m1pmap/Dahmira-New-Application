                    <StackPanel Orientation="Horizontal" Grid.Column="3" VerticalAlignment="Top" Height="40" Margin="0,22,0,0" Grid.Row="0" Grid.ColumnSpan="2">
                        <Button x:Name="CalcUploadFromFile"
                                Template="{StaticResource btTemplate}"
                                Height="40" Width="40"
                                Background="Coral" 
                                ToolTip="Вставить из файла"
                                Margin="5,0"
                                Click="CalcUploadFromFile_Click">

                            <Image Source="/resources/images/upload_from_file.png" Height="27" Width="27" Margin="-30,0,0,0"/>
                        </Button>
                        <Button x:Name="CalcDeleteImage"
                                Template="{StaticResource btTemplate}"
                                Height="40" Width="40"
                                Background="OrangeRed" 
                                ToolTip="Удалить фото" 
                                Margin="5,0"
                                Click="CalcDeleteImage_Click">

                            <Image Source="/resources/images/delete_image.png" Height="27" Width="27" Margin="-30,0,0,0"/>
                        </Button>
                        <Button x:Name="CalcDownloadToFile"
                                Template="{StaticResource btTemplate}"
                                Height="40" Width="40"
                                Background="Coral" 
                                ToolTip="Сохранить в файл" 
                                Margin="5,0"
                                Click="CalcDownloadToFile_Click">

                            <Image Source="/resources/images/download_to_file.png" Height="27" Width="27" Margin="-30,0,0,0"/>
                        </Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="1" VerticalAlignment="Top" Height="40" Margin="23,5,0,0" Grid.ColumnSpan="2">
                        <Button x:Name="CalcUploadFromClipboard"
                                Template="{StaticResource btTemplate}"
                                Height="40" Width="40"
                                Background="#FF50CBFF" 
                                ToolTip="Вставить из буфера"
                                Margin="5,0"
                                Click="CalcUploadFromClipboard_Click">

                            <Image Source="/resources/images/upload_from_clipboard.png" Height="27" Width="27" Margin="-30,0,0,0"/>
                        </Button>
                        <Button x:Name="CalcDownloadToClipboard"
                                Template="{StaticResource btTemplate}"
                                Height="40" Width="40"
                                Background="#FF50CBFF" 
                                ToolTip="Сохранить в буфер" 
                                Margin="5,0"
                                Click="CalcDownloadToClipboard_Click">

                            <Image Source="/resources/images/download_to_clipboard.png" Height="27" Width="27" Margin="-30,0,0,0"/>
                        </Button>
                    </StackPanel>

                    <Label Content="НАСТРОЙКА ЦЕНЫ:" FontFamily="Arial Black" Foreground="Gray" Margin="3,45,10,22" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2"/>

                    <ComboBox x:Name="allCountries_comboBox" 
                              DisplayMemberPath="name" Foreground="Gray" FontFamily="Arial Black" Margin="0,68,8,12" Grid.Row="1"
                              SelectionChanged="allCountries_comboBox_SelectionChanged"
                              SelectedIndex="0" Grid.Column="3"/>

                    <StackPanel Orientation="Vertical" Grid.RowSpan="2" HorizontalAlignment="Left" Margin="5,53,0,-2" Width="40">
                        <Button x:Name="addDependency_button"
                                Template="{StaticResource btTemplate}" 
                                Height="40" Width="40"
                                Background="MediumSeaGreen" 
                                VerticalAlignment="Top" 
                                Margin="0,0,0,5" 
                                ToolTip="Обновить ценники в расчетке"
                                Click="addDependency_button_Click">

                            <Image Source="pack://application:,,,/resources/images/add.png" Height="25" Width="25" Margin="-30,0,0,0"/>
                        </Button>

                        <Button x:Name="DeleteDependency"
                                Template="{StaticResource btTemplate}"
                                Height="40" Width="40"
                                Background="OrangeRed" 
                                ToolTip="Удалить фото" 
                                Click="DeleteDependency_Click">

                            <Image Source="/resources/images/delete_image.png" Height="27" Width="27" Margin="-30,0,0,0"/>
                        </Button>
                    </StackPanel>

                    <DataGrid x:Name="DependencyDataGrid" Margin="49,22,21,27" 
                              FontFamily="Arial Black" Foreground="Gray" 
                              RowHeaderWidth="0" Background="White" BorderThickness="1" Visibility="Visible" Grid.RowSpan="2" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridComboBoxColumn Header="Наименование" Width="20*"
                                SelectedItemBinding="{Binding SelectedProductName}">
                                <DataGridComboBoxColumn.ElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.ComboBoxProductNameValues}"/>
                                    </Style>
                                </DataGridComboBoxColumn.ElementStyle>
                                <DataGridComboBoxColumn.EditingElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.ComboBoxProductNameValues}"/>
                                        <Setter Property="IsEditable" Value="True"/>
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </Style>
                                </DataGridComboBoxColumn.EditingElementStyle>
                            </DataGridComboBoxColumn>

                            <DataGridComboBoxColumn Header="Тип" Width="2*"
                                        SelectedItemBinding="{Binding SelectedType}">
                                <DataGridComboBoxColumn.ElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.ComboBoxValues}"/>
                                        <Setter Property="FontSize" Value="18"/>
                                    </Style>
                                </DataGridComboBoxColumn.ElementStyle>
                                <DataGridComboBoxColumn.EditingElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.ComboBoxValues}"/>
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Setter Property="FontSize" Value="18"/>
                                    </Style>
                                </DataGridComboBoxColumn.EditingElementStyle>
                            </DataGridComboBoxColumn>
                            <DataGridTextColumn Header="Множитель" Binding="{Binding Multiplier}" Width="3*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>
            </Grid>
        </Border>

        <!--Контур с БД-->
        <Border x:Name="dataBaseBorder_border"
            Grid.Row="2"
            Background ="White" 
            CornerRadius="15,15,15,15" 
            Margin="5,5,5,5" RenderTransformOrigin="0.501,0.554">

            <Grid>
                <!--Сетка с элементами управления основной БД-->
                <Grid x:Name="DataBaseGrid_Grid" Margin="0,0,0,10" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="61"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <StackPanel Margin="10,10,10,10" Grid.Row="0"
                                Orientation="Horizontal">

                        <Button x:Name="deleteSelectedProduct_button"
                                Template="{StaticResource btTemplate}" 
                                Height="40" Width="40"
                                Background="OrangeRed" 
                                VerticalAlignment="Top" 
                                Margin="0,0,5,0" 
                                ToolTip="Удалить выбранный товар"
                                Click="deleteSelectedProduct_button_Click">

                            <Image Source="/resources/images/delete_image.png" Height="32" Width="32" Margin="-30,0,0,0"/>
                        </Button>

                        <Button x:Name="deleteSelectedManufacturerProducts_button"
                                Template="{StaticResource btTemplate}" 
                                Height="40" Width="40"
                                Background="Coral" 
                                VerticalAlignment="Top" 
                                Margin="0,0,5,0"
                                ToolTip="Удалить производителя"
                                Click="deleteSelectedManufacturerProducts_button_Click">

                            <Image Source="/resources/images/delete_manufacturer.png" Height="32" Width="32" Margin="-30,0,0,0"/>
                        </Button>

                        <TextBox x:Name="productNum_textBox" 
                                 Width="Auto" 
                                 Margin="5,11,0,9"
                                 Text="1" 
                                 BorderBrush="White" 
                                 FontFamily="Arial Black" 
                                 Foreground="Gray" 
                                 FontSize="16" 
                                 VerticalContentAlignment="Center"
                                 MinWidth="18"
                                 KeyDown="productNum_textBox_KeyDown"/>

                        <Label x:Name="productsCount_label" 
                               Content="из 1" Margin="-2,5" FontFamily="Arial Black" Width="Auto" Foreground="Gray" FontSize="16" Height="27"/>

                        <Button
                                Template="{StaticResource btTemplate}" 
                                Height="40" Width="40"
                                Background="#FF50CBFF" 
                                VerticalAlignment="Top" 
                                Margin="10,0,5,0"
                                ToolTip="Быстрый поиск">

                            <Image Source="/resources/images/fast_search.png" Height="32" Width="32" Margin="-30,-2,0,0"/>
                        </Button>

                        <Button
                                Template="{StaticResource btTemplate}" 
                                Height="40" Width="40"
                                Background="MediumSeaGreen" 
                                VerticalAlignment="Top"
                                Margin="0,0,5,0"
                                ToolTip="Сохранить в прайс текущие изменения">

                            <Image Source="/resources/images/save.png" Height="32" Width="32" Margin="-30,-2,0,0"/>
                        </Button>
                    </StackPanel>
                    <DataGrid x:Name="dataBaseGrid" Grid.Row="1" AutoGenerateColumns="False" Margin="5,0,5,0" Background="Transparent"
                              SelectionChanged="dataBaseGrid_SelectionChanged" RowHeight="30" MinRowHeight="30"
                              MouseDoubleClick="dataBaseGrid_MouseDoubleClick"
                              CanUserAddRows="False" FontFamily="Arial Black" Foreground="Gray"
                              RowHeaderWidth="0" SelectedIndex="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Производитель" Binding="{Binding Manufacturer}" Width="20*" MinWidth="100" IsReadOnly="True"></DataGridTextColumn>
                            <DataGridTextColumn Header="Наименование"  Binding="{Binding ProductName}" Width="50*" MinWidth="100" IsReadOnly="True"></DataGridTextColumn>
                            <DataGridTextColumn Header="Артикул"  Binding="{Binding Article}" Width="20*" MinWidth="100" IsReadOnly="True"></DataGridTextColumn>
                            <DataGridTextColumn Header="Ед. измерения"  Binding="{Binding Unit}" Width="7*" MinWidth="75" IsReadOnly="True"></DataGridTextColumn>
                            <DataGridTemplateColumn Header="Изображение" Width="10*" MinWidth="50" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding Photo, Converter={StaticResource ByteArrayToImageSourceConverter}}" Width="Auto" Height="Auto" MaxWidth="100" MaxHeight="100" MinHeight="20" MinWidth="20"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Цена"  Binding="{Binding Cost}" Width="5*" MinWidth="75" IsReadOnly="True"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!--Сетка с элементами управления и dataGrid расчётки-->
                <Grid x:Name="CalcDataGrid_Grid" Margin="0,0,0,10" Visibility="Hidden">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="953*"/>
                        <ColumnDefinition Width="957*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="61"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <StackPanel Margin="10,10,10,10" Grid.Row="0" Orientation="Horizontal" Grid.Column="0">
                        <Button x:Name="CalcDeleteSelectedProduct_button"
                                Template="{StaticResource btTemplate}" 
                                Height="40" Width="40"
                                Background="OrangeRed" 
                                VerticalAlignment="Top" 
                                Margin="0,0,5,0" 
                                ToolTip="Удалить выбранный товар"
                                Click="CalcDeleteSelectedProduct_button_Click">

                            <Image Source="/resources/images/delete_image.png" Height="32" Width="32" Margin="-30,0,0,0"/>
                        </Button>

                        <Button x:Name="CalcRefresh_button"
                                Template="{StaticResource btTemplate}" 
                                Height="40" Width="40"
                                Background="MediumSeaGreen" 
                                VerticalAlignment="Top" 
                                Margin="0,0,5,0" 
                                ToolTip="Обновить ценники в расчетке"
                                Click="CalcRefresh_button_Click">

                            <Image Source="pack://application:,,,/resources/images/refresh.png" Height="32" Width="32" Margin="-30,0,0,0"/>
                        </Button>

                        <Button x:Name="CalcChapter_button"
                                Template="{StaticResource btTemplate}" 
                                Height="40" Width="40"
                                Background="#FF50CBFF" 
                                VerticalAlignment="Top" 
                                Margin="0,0,5,0" 
                                ToolTip="Создать раздел"
                                Click="CalcChapter_button_Click">

                            <Image Source="pack://application:,,,/resources/images/chapter.png" Height="32" Width="32" Margin="-30,0,0,0"/>
                        </Button>

                        <Label  Content="ИМЯ РАЗДЕЛА:" Margin="-2,5" FontFamily="Arial Black" Width="Auto" Foreground="Gray" FontSize="16" Height="27"/>

                        <TextBox x:Name="chapterName_textBox" Text="Раздел"
                                 Width="Auto" 
                                 Margin="0,11,5,9" 
                                 BorderBrush="White" 
                                 FontFamily="Arial Black" 
                                 Foreground="Gray" 
                                 FontSize="16" 
                                 VerticalContentAlignment="Center"
                                 MinWidth="18"
                                 KeyDown="productNum_textBox_KeyDown"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="0,10,10,10" HorizontalAlignment="Right" Width="Auto">

                        <Button x:Name="CalcToExcel_button"
                                Template="{StaticResource btTemplate}" 
                                Height="40" Width="60"
                                Background="MediumSeaGreen" 
                                Margin="0,0,5,0" 
                                ToolTip="Экспортировать в Excel"
                                Click="CalcToExcel_button_Click">

                            <Image Source="pack://application:,,,/resources/images/calcToExcel.png" Height="30" Width="50" VerticalAlignment="Top" Margin="-30,0,0,0"/>
                        </Button>
                        <Button x:Name="CalcToNewSheetExcel_button"
                                Template="{StaticResource btTemplate}" 
                                Height="40" Width="60"
                                Background="MediumSeaGreen" 
                                ToolTip="Экспортировать в Excel новым листом"
                                Click="CalcToNewSheetExcel_button_Click">

                            <Image Source="pack://application:,,,/resources/images/calcToNewSheetExcel.png" Height="30" Width="50" VerticalAlignment="Top" Margin="-30,0,0,0"/>
                        </Button>
                    </StackPanel>
                    <DataGrid x:Name="CalcDataGrid" Grid.Row="1" AutoGenerateColumns="False" Margin="5,0,5,0" Background="White" Foreground="Gray" FontFamily="Arial Black"
                              RowHeight="30" MinRowHeight="30"
                              CanUserAddRows="False" HorizontalScrollBarVisibility="Disabled" RowHeaderWidth="0"
                              SelectedCellsChanged="CalcdataGrid_SelectedCellsChanged"
                              CurrentCellChanged="CalcDataGrid_CurrentCellChanged" Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№" Binding="{Binding Num, Converter={StaticResource NullToEmptyStringConverter}}" Width="1*" MinWidth="30" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding isDependency, Mode=OneWay}" Value="True">
                                                <Setter   Property="Background" Value="LightPink"/>
                                                <Setter Property="Margin" Value="-5"/>
                                                <Setter Property="Padding" Value="6,6,0,0"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Производитель" Binding="{Binding Manufacturer}" Width="10*" MinWidth="120" IsReadOnly="True"></DataGridTextColumn>
                            <DataGridTextColumn Header="Наименование"  Binding="{Binding ProductName}" Width="40*" MinWidth="50" IsReadOnly="True"></DataGridTextColumn>
                            <DataGridTextColumn Header="Артикул"  Binding="{Binding Article}" Width="6*" MinWidth="70" IsReadOnly="True"></DataGridTextColumn>
                            <DataGridTextColumn Header="Ед. измерения"  Binding="{Binding Unit}" Width="6*" MinWidth="50" IsReadOnly="True"></DataGridTextColumn>
                            <DataGridTemplateColumn Header="Изображение" Width="10*" MinWidth="50" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding Photo, Converter={StaticResource ByteArrayToImageSourceConverter}}" Width="Auto" Height="Auto" MaxWidth="100" MaxHeight="100" MinHeight="20" MinWidth="20"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Цена"  Binding="{Binding Cost, Converter={StaticResource NullToEmptyStringConverter}}" Width="5*" MinWidth="75" IsReadOnly="True"></DataGridTextColumn>
                            <DataGridTextColumn Header="Количество"  Binding="{Binding Count, Converter={StaticResource NullToEmptyStringConverter}}" Width="5*" MinWidth="50" IsReadOnly="False"></DataGridTextColumn>
                            <DataGridTextColumn Header="Итоговая цена"  Binding="{Binding TotalCost, Converter={StaticResource NullToEmptyStringConverter}}" Width="7*" MinWidth="75" IsReadOnly="True"></DataGridTextColumn>
                            <DataGridTextColumn Header="ID"  Binding="{Binding ID, Converter={StaticResource NullToEmptyStringConverter}}" Width="2*" MinWidth="50" IsReadOnly="True"></DataGridTextColumn>
                            <DataGridTextColumn Header="ID Art."  Binding="{Binding ID_Art, Converter={StaticResource NullToEmptyStringConverter}}" Width="5*" MinWidth="50" IsReadOnly="True"></DataGridTextColumn>
                            <DataGridTextColumn Header="Примечание"  Binding="{Binding Note}" Width="6*" MinWidth="100" IsReadOnly="True"></DataGridTextColumn>
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="{Binding RowColor}"/>
                                <Setter Property="Foreground" Value="{Binding RowForegroundColor}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightSkyBlue"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                    </DataGrid>
                </Grid>
            </Grid>
        </Border>
        <Border Grid.Row="3" Background="White" Margin="5,-5,5,5" CornerRadius="0, 0, 15, 15" BorderThickness="0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,-5,0,10">
                    <Label x:Name="fullCostType" Content="ИТОГО:" FontFamily="Arial Black" Width="Auto" Foreground="Gray" FontSize="20" />
                    <Label x:Name="fullCost" Content="0" Margin="-2,0,10,0" FontFamily="Arial Black" Width="Auto" Foreground="Gray" FontSize="20"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
    
    
